@page
@model Delivery.Pages.Checkout.CheckoutModel
@{
}

<h1>Your order: </h1>
@{
    var imagePath = "~/img/" + (@Model.ImageTitle + ".png");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp-append-version="true" />
        <p>Your order for the @Model.PizzaName Pizza is ready!</p>
        <p>Total price for your order is: @Model.PizzaPrice coins</p>
        <br />
        <a class="btn btn-primary mx-auto" asp-area="" asp-page="ThankYou">Confirm Order</a>
    </div>

</div>